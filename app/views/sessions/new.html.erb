<body id="log_in_background">
  <div id="login_form">
      <%= form_for(:session, :html => {class: "form-horizontal", id:"signup", role: "form"}, url: login_path) do |f| %>
      <h2 align="center">Inicio de sesi√≥n</h2><br/>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :email %>
      </div>
      <div class="col-sm-6">
        <%= f.email_field :email, class: "form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :password %>
      </div>
      <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</body>