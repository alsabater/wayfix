<body class="log_in_background">
  <div id="login_form">
      <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <h2 align="center">Inicio de sesión</h2><br/>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Contraseña" %>
      </div>
    </div>
    <div class="text-center">
        <p><%= f.submit "Log in", class: 'btn btn-primary' %></p>
        ¿Aún no te has registrado?<br/>
        <%= link_to "Regístrate aquí", new_user_path %>
    </div>
    <% end %>
  </div>
</body>