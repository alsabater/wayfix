<div id="signup" class="form-horizontal">
	<div class="row">
		<h2> Registro </h2><br/>
	</div>
	<%= form_for @user do |f| %>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Email %>
		</div>
		<div class="col-sm-6">
		<%= f.text_field :email, class:"form-control" %>
		</div>
	</div>
		<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :password %>
		</div>
		<div class="col-sm-6">
		<%= f.password_field :password, class:"form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Nombre %>
		</div>
		<div class="col-sm-6">
		<%= f.text_field :name, class:"form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Apellidos %>
		</div>
		<div class="col-sm-6">
		<%= f.text_field :surname_1, class:"form-control", placeholder:"Primer apellido" %>
		<%= f.text_field :surname_2, class:"form-control", placeholder:"Segundo apellido" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Fecha_de_nacimiento %>
		</div>
		<div class="col-sm-6">
		<%= f.text_field :birthday, class:"form-control", 'data-behaviour' => 'datepicker' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Sexo %>
		</div>
		<div class="col-sm-1">
		<%= f.select(:genre, ['','Hombre', 'Mujer'], {}, {:class => "select"}) %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :DNI %>
		</div>
		<div class="col-sm-6">
		<%= f.text_field :dni, class:"form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Pasaporte %>
		</div>
		<div class="col-sm-6">
		<%= f.text_field :passport, class:"form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :País %>
		</div>
		<div class="col-sm-3">
		<%= f.country_select(:country, ["Spain"], {}, {:class => "select"})%>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Teléfono %>
		</div>
		<div class="col-sm-6">
		<%= f.text_field :phone_number_1, class:"form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Teléfono_alternativo %>
		</div>
		<div class="col-sm-6">
		<%= f.text_field :phone_number_2, class:"form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 control-label">
		<%= f.label :Tipo_de_usuario %>
		</div>
		<div class="col-sm-3">
		<%= f.select(:job_position, ['','Personal de administración y servicios','Personal Médico','Personal sanitario no médico'], {}, {:class => "select"}) %>
		</div>
	</div>
	<div class="form-group">
		<%= f.submit :Registrarse, class:"form-control btn-success" %>
	</div>
	<% end %>
</div>