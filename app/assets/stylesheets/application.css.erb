body {
	margin: 0;
	height:100%;
}

#topbar {
 	position: static;
 	height: 100px;
 	width: 100%;
	margin-bottom: 30px;
}

#topbar ul {
	padding: 20px 30px 0px 0px;
	margin-bottom: 10px;
	float: right;
	font-size: 15px;
}

#topbar img {
	float: left;
	width: 110px;
	margin: 10px;
}

#navbar {
	width: 100px;
	margin: 10px 40px 0px 0px;
	float: left;
}
#navbar li {
	margin-left: 20px;
	padding: 20px;
}

span.glyphicon {
    font-size: 30px;
    color: #3087D0;
}

span.glyphicon:hover {
    font-size: 30px;
    color: #003F95;
}

span.glyphicon:active {
    font-size: 30px;
    color: #003F95;
}

#footer {
	background: white;
	width:100%;
	height:70px;
	position:fixed;
	bottom:0;
	left:0;
	text-align: center;
	padding-top: 30px;
}

#log_in_background {
  	background: url('<%= asset_path("wayfix_background.jpg") %> ') no-repeat center center fixed; 
  	-webkit-background-size: cover;
  	-moz-background-size: cover;
 	-o-background-size: cover;
 	background-size: cover;
}

.alerts {
	width: 500px;
	text-align: center;
	margin: auto;
}
