body {
	margin:0;
	padding:0;
	height:100%;
}

#topbar {
 	position: static;
 	height: 90px;
 	width: 100%;
	background-color: white;
	margin-bottom: 15px;
}

#topbar ul {
	padding: 40px 30px 0px 0px;
	float: right;
}

#topbar img {
	float: left;
	width: 110px;
	margin: 10px;
}

#navbar {
	width: 100px;
	margin: 10px 40px 0px 0px;
	float: left;
}
#navbar li {
	margin-left: 20px;
	padding: 20px;
}

span.glyphicon {
    font-size: 30px;
    color: #3087D0;
}

span.glyphicon:hover {
    font-size: 30px;
    color: #003F95;
}

span.glyphicon:active {
    font-size: 30px;
    color: #003F95;
}

#content {
	padding-bottom:70px; /* Height of the footer element */
}

#footer {
	background: white;
	width:100%;
	height:70px;
	position:fixed;
	bottom:0;
	left:0;
	text-align: center;
	padding-top: 30px;
}

#log_in_background {
	background-image: url('<%= asset_path("log_in_eye.jpg") %> ');
	background-repeat: no-repeat;
	background-color: white;
	background-position: center;
	background-attachment: fixed;
	width: 100%;
}

.alerts {
	width: 500px;
	text-align: center;
	margin: auto;
}
